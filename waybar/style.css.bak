@import url("/home/wahid/.cache/wal/colors-waybar.css");

* {
  border: none;
  border-radius: 0;
  font-family: "JetBrainsMono Nerd Font";
  font-weight: bold;
  font-size: 15px;
  min-height: 0;
}

window#waybar {
  opacity: 20;
  color: #cdd6f4;
  background: @background;
}

tooltip {
  border-radius: 3px;
  border-width: 2px;
  border-style: solid;
  border-color: #1e1e2e;
}

#workspaces button {
  padding: 5px;
  color: #1e2e2e;
  margin-right: 5px;
}

#workspaces button.active {
  color: #a6adc8;
}

#workspaces button.focused {
  color: #a6adc8;
  border-radius: 3px;
}

#workspaces button.urgent {
  color: #1e1e2e;
  border-radius: 3px;
}

#workspaces button:hover {
  color: #cdd6f4;
  border-radius: 3px;
}

#custom-power_profile,
#custom-weather,
#window,
#battery,
#clock,
#pulseaudio,
#network,
#bluetooth,
#temperature,
#workspaces,
#tray,
#backlight {
  padding: 0px 10px;
  background: @background;
}

#temperature {
  border-radius: 3px 0px 0px 3px;
  color: @color15;
}

#temperature.critical {
  color: #eba0ac;
}

#backlight {
  color: @color14;
  border-radius: 3px 0px 0px 3px;
}

#tray {
  border-radius: 3px;
  margin-right: 10px;
}

#workspaces {
  border-radius: 3px;
  margin-left: 10px;
  padding-right: 0px;
  padding-left: 5px;
}

#custom-power_profile {
  color: @color12;
  border-left: 0px;
  border-right: 0px;
}

#window {
  border-radius: 3px;
  margin-left: 60px;
  margin-right: 60px;
}

#clock {
  color: @color1;
  border-radius: 3px;
  margin-left: 10px;
  border-right: 0px;
}

#network {
  color: @color2;
  border-radius: 3px 0px 0px 3px;
  border-left: 0px;
  border-right: 0px;
}

#bluetooth {
  color: @color3;
  border-radius: 0px 3px 3px 0px;
  margin-right: 10px;
}

#pulseaudio {
  color: @color9;
  border-left: 0px;
  border-right: 0px;
}

#pulseaudio.microphone {
  color: @color5;
  border-left: 0px;
  border-right: 0px;
  border-radius: 0px 3px 3px 0px;
  margin-right: 10px;
}

#battery {
  color: @color7;
  border-radius: 0 3px 3px 0;
  margin-right: 10px;
  border-left: 0px;
}
